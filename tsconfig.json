{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": ["jest", "node"],
    "incremental": true,
    "sourceMap": true,
    "plugins": [{ "name": "next" }],
    "paths": {
      "@/*": ["./nextjs/src/*"],
      "@traduxo/packages/*": ["./packages/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "nextjs/src/**/*",
    "packages/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
